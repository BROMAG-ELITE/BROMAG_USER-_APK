<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="15dp"
    app:cardElevation="10dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp">
            <androidx.cardview.widget.CardView
                android:id="@+id/imgCard"
                android:layout_width="100dp"
                android:layout_height="80dp"
                app:cardCornerRadius="10dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">
                <ImageView
                    android:id="@+id/menuImage"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="fitXY"
                    android:src="@drawable/chicken"/>
            </androidx.cardview.widget.CardView>

                <TextView
                    android:id="@+id/name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Pepper Chicken"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    android:layout_marginStart="10dp"
                    android:fontFamily="@font/comfortaa_bold"
                    app:layout_constraintStart_toEndOf="@id/imgCard"
                    app:layout_constraintTop_toTopOf="parent"/>
                <LinearLayout
                    android:id="@+id/priceLay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/name"
                    app:layout_constraintStart_toStartOf="@id/name">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Rs. "
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/comfortaa_bold"/>
                    <TextView
                        android:id="@+id/price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="120"
                        android:textSize="12sp"
                        android:textColor="#000000"
                        android:fontFamily="@font/comfortaa_bold"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="5dp"
                    app:layout_constraintTop_toBottomOf="@id/priceLay"
                    app:layout_constraintStart_toStartOf="@id/priceLay">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Offer"
                        android:textSize="12sp"
                        android:textColor="#CD5C08"
                        android:fontFamily="@font/comfortaa_bold"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="5%"
                        android:textSize="12sp"
                        android:layout_marginStart="5dp"
                        android:textColor="#CD5C08"
                        android:fontFamily="@font/comfortaa_bold"/>
                </LinearLayout>

                    <LinearLayout
                        android:id="@+id/elegant_btn"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginEnd="10dp"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_minus"
                            android:layout_width="29dp"
                            android:layout_height="29dp"
                            android:text="-"
                            android:fontFamily="@font/comfortaa_bold"
                            android:textSize="20sp"
                            android:background="@drawable/mobile_edit_bg"
                            android:textColor="#000000"/>
                        <TextView
                            android:id="@+id/tv_quantity"
                            android:layout_width="30dp"
                            android:layout_height="25dp"
                            android:text="1"
                            android:fontFamily="@font/comfortaa_semi_bold"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textColor="#000000"
                            android:textSize="15sp"/>
                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_plus"
                            android:layout_width="29dp"
                            android:layout_height="29dp"
                            android:text="+"
                            android:fontFamily="@font/comfortaa_semi_bold"
                            android:background="@drawable/mobile_edit_bg"
                            android:textSize="20sp"
                            android:textColor="#000000"
                            android:gravity="center"/>
                    </LinearLayout>


            <ImageView
                android:id="@+id/deleteItem"
                android:layout_width="25dp"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_delete"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.cardview.widget.CardView>